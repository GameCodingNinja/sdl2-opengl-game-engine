
/************************************************************************
*    FILE NAME:       spritedata.h
*
*    DESCRIPTION:     Sprite Data Class
************************************************************************/

#ifndef __sprite_data_h__
#define __sprite_data_h__

// Physical component dependency
#include <common/object.h>

// Standard lib dependencies
#include <string>

class CSpriteData : public CObject
{
public:

    // Constructor
    CSpriteData( const XMLNode & node );
    
    // Destructor
    ~CSpriteData();
    
    // Get the name
    const std::string & GetObjectName() const;

    // Get the group
    const std::string & GetGroup() const;
    
    // Get the AI name
    const std::string & GetAIName() const;
    
    // Get the unique id number
    int GetId() const;
    
private:

    // Load the data from node
    void LoadFromNode( const XMLNode & node );

private:

    std::string m_group;
    std::string m_objectName;
    std::string m_aiName;
    int m_id;
};

#endif  // __sprite_data_h__


